<!-- ======= Menu Section ======= -->
<section id="menu" class="menu">
    <div class="container">

        <div class="section-title">
            <h2>Check our tasty <span>Menu</span></h2>
        </div>

        <div class="row">
            <div class="col-lg-12 d-flex justify-content-center">
                <ul id="menu-flters">
                    <li data-filter="*" class="filter-active">Show All</li>
                    @foreach (var item in Model)
                    {

                        <li data-filter=".filter-@Html.DisplayFor(modelItem => item.Menu.nom)" class="filter-active">@Html.DisplayFor(modelItem => item.Menu.nom)</li>

                    }
                </ul>
            </div>
        </div>

        <div class="row menu-container">
            @foreach (var item in Model)
            {
                <div class="col-lg-6 menu-item filter-@Html.DisplayFor(modelItem => item.Menu.nom)">
                    <div class="menu-content">
                        <a href="#">@Html.DisplayFor(modelItem => item.lib)</a><span>@Html.DisplayFor(modelItem => item.Menu.prix)DH</span>
                    </div>
                    
                </div>
            }
            </div>

    </div>
</section><!-- End Menu Section -->